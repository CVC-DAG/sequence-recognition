{
    "exp_name": "baro_hip_dag001_copiale",
    "description": "Training a Bar√≥ CRNN for the recognition of copiale Cipher words.",
    "cipher": "copiale",
    "wandb_mode": "online",
    "wandb_project": "HIP",
    "dirs": {
        "results_dir": "/data2fast/users/ptorras/hip",
        "base_data_dir": "/data2fast/users/ptorras/copiale_moha",
        "training_file": "gt_words_training.json",
        "training_root": "words",
        "validation_file": "gt_words_validation.json",
        "validation_root": "words",
        "test_file": "gt_words_test.json",
        "test_root": "words",
        "vocab_data": "vocab.json"
    },
    "data": {
        "target_shape": [400, 96],
        "target_seqlen": 18,
        "aug_pipeline": "basic_decrypt"
    },
    "model": {
        "model_name": "baro_crnn",
        "model_weights": null,
        "lstm_hidden_size": 128,
        "lstm_layers": 4,
        "blstm": true,
        "dropout": 0.4,
        "output_classes": 85
    },
    "train": {
        "batch_size": 12,
        "device": "cuda",
        "grad_clip": null,
        "max_epochs": 200,
        "learning_rate": 3e-4,
        "optimizer": "adamw",
        "save_every": 1,
        "eval_every": 1,
        "weight_decay": 1e-5,
        "workers": 8,

        "plateau_sched": true,
        "plateau_factor": 1e-1,
        "plateau_iters": 5,
        "plateau_thresh": 0.01,
        "plateau_min": 1e-7,

        "warmup_sched": false,
        "warmup_factor": 1e-1,
        "warmup_iters": 5000,

        "cosann_sched": false,
        "cosann_t0": 3e-4,
        "cosann_factor": 1e-1,
        "cosann_min": 1e-5
    },
    "beam_width": 30
}